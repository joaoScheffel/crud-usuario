{
    "compilerOptions": {
        "baseUrl": ".",
        "rootDir": "src",
        "outDir": "dist",
        "module": "commonjs",
        "target": "es2018",
        "lib": [
            "es6",
            "DOM",
        ],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "allowJs": true,
        "sourceMap": true,
        "removeComments": true,
        "typeRoots": [
            "@types",
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "node_modules/mongodb",
        "node_modules/**",
        "node_modules/**/*",
        "dist"
    ],
    "include": [
        "src/**/*"
    ]
}